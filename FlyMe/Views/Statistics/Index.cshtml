
@{
    ViewData["Title"] = "Statistics";
}

<h2>Statistics</h2>

<script src="https://d3js.org/d3.v3.min.js" charset="utf-8"></script>
<script>
    $.ajax({
        url: '/Statistics/Stats',
        success: function (result) {
            var data = result;
            createPopularAirportssGraph(data);
        },
        error: function(hxr, status, err) {
            console.log('status: ' + status + ', error: ' + err);
        }
    });

    function createPopularAirportssGraph(usersData) {

        var margin = { top: 20, right: 20, bottom: 70, left: 40 },
            width = 600,
            height = 300;

        // set the ranges
        var x = d3.scale.ordinal().rangeRoundBands([0, width], .05);
        var y = d3.scale.linear().range([height, 0]);

        var xAxis = d3.svg.axis()
            .scale(x)
            .orient("bottom");

        var yAxis = d3.svg.axis()
            .scale(y)
            .orient("left")
            .ticks(10);

        // add the SVG element
        var svg = d3.select("#popular-airports-graph").append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
            .append("g")
            .attr("transform",
                "translate(" + margin.left + "," + margin.top + ")");

        // load the data
        data.forEach(function (d) {
            d.AirportAcronims = d.AirportAcronims;
            d.numberOfVisitors = +d.numberOfVisitors;
        });

        // scale the range of the data
        x.domain(data.map(function (d) { return d.AirportAcronims; }));
        y.domain([0, d3.max(data, function (d) { return d.numberOfVisitors; })]);

        // add axis
        svg.append("g")
            .attr("class", "x axis")
            .attr("transform", "translate(0," + height + ")")
            .call(xAxis)
            .selectAll("text")
            .style("text-anchor", "end")
            .attr("dx", "-.8em")
            .attr("dy", "-.55em")
            .attr("transform", "rotate(-90)");

        svg.append("g")
            .attr("class", "y axis")
            .call(yAxis)
            .append("text")
            .attr("transform", "rotate(-90)")
            .attr("y", 0)
            .attr("dy", "1em")
            .style("text-anchor", "end")
            .text("NumberOfVisitors");

        // Add bar chart
        svg.selectAll("bar")
            .data(data)
            .enter().append("rect")
            .attr("class", "bar")
            .attr("x", function (d) { return x(d.AirportAcronims) + 10; })
            .attr("width", x.rangeBand() / 2)
            .attr("y", function (d) { return y(d.numberOfVisitors); })
            .attr("height", function (d) { return height - y(d.numberOfVisitors); });
    }

</script>
